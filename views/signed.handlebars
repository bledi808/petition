<div class="petition-container">
    {{#rows}}
    <h2 id="thankyou" style="margin-top: 20%;">
        Thank you for your support
            <a style="color: tomato">
                {{first}}
            </a>
                !   
    </h2>
    {{/rows}}
    <div style="width: 350px; height: 100px; border: 1px darkgrey solid; background: whitesmoke">
        <img style="width: 100%; height: 100%" src="{{signature}}">
    </div>
    <h1 style="margin-top: 6%;font-size:50px; color: blue">
        {{count}}
    </h1>
    <h3 style="margin-top: -2%;">
        other people care about this issue.
    </h3>  
    <a href="/petition/signers" style="text-decoration: none">
        <h4 style="margin-top: 0; background-color: seagreen; padding:1% 2%;color:white; width:220px">
            See who else signed up
        </h4>
    </a>
    <a href="/profile/edit" style="text-decoration: none">
        <h4 style="margin-top: 0; background-color: seagreen; padding:1% 2%;color:white; width:220px">
            Update your profile
        </h4>
    </a>
    <form method="POST" action='/delete/signature'>
        <button style="margin-top: 0; border: none; background-color: seagreen; padding:1% 2%;color:white; width:220px">
            Delete your signature
        </button>
    {{>csrf}}    
    </form>

</div>