<div class="petition-container">
    <form id="register-container" method="POST">
        <p style="margin:0 0 1% 2%; text-shadow: 1px 1px 1px darkgrey; color: midnightblue">
            Register with your details 
        </p>
        <div class="form-layout">   
            <div class="input-fields">
                <input class="reg-input" type="text" id="firstname" name="firstname" placeholder="Name">
                <input class="reg-input" type="text" id="surname" name="surname" placeholder="Surame">
                <input  class="reg-input" type="email" id="surname" name="email" placeholder="Email">
                <input  class="reg-input" type="password" id="surname" name="password" placeholder="Password">
                {{>csrf}}
            <div id="reg-actions">
                <button name="submit" id="submit-reg">Register</button>
                <span id="already-reg">
                    Login <a href="/login" style="text-decoration: none; color: tomato">here</a> instead!
                <span>
            </div>
            </div>
        </div>                
    </form>
    {{#if empty}}
    <p style="color: red; margin-top:1%">Please fill in all fields to register!</p>  
    {{/if}}
</div>

