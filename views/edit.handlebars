<header>
    <div class="logo-container">
        <div id="logo" style="font-size:larger">
            Meta-Petition ‚úçüèº
        </div>
    </div>       
    <div class="account-header">
        <div id="user-name">
             {{#rows}}
                {{first}}
            {{/rows}}
        </div>
        <form method="POST" action='/logout'>
            <button id="nav-button" style="border:none; background-color: none;font-size:large; ">Logout</button> 
            {{>csrf}}    
        </form>
    </div>
</header>
<div class="petition-container">
    <form method="POST" id="register-container" style="margin-top:13%">    
        <p style="margin:0 0 1% 2%; text-shadow: 1px 1px 1px darkgrey; color: midnightblue">
            Edit your profile
        </p>
        <div class="form-layout">   
            <div class="input-fields">
                {{#rows}}
                <input class="reg-input" type="text" id="firstname" name="firstname" placeholder="Name" value="{{first}}">
                <input class="reg-input" type="text" id="surname" name="surname" placeholder="Surame" value="{{last}}" >
                <input  class="reg-input" type="email" id="surname" name="email" placeholder="Email" value="{{email}}">
                <input  class="reg-input" type="password" id="surname" name="password" placeholder="Password">
                <input class="reg-input" id="age" name="age" placeholder="Age" value="{{age}}">
                <input class="reg-input" type="text" id="city" name="city" placeholder="City" style="margin:1% 0" value="{{city}}">
                <input class="reg-input"type="text" id="url" name="url" placeholder="Homepage" pattern="https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()@:%_\+.~#?&amp;//=]" style="margin:1% 0" value="{{url}}">                      
                {{/rows}}
                {{>csrf}}
                <div id="reg-actions">
                    <button name="submit" id="submit-reg">Update</button>
                </div>
                </div>
            </div>  
    </form>
        {{!-- {{#if empty}}
            <p style="color: tomato; margin-top:1%">Name, Surname and Email fields must be populated! </p>  
        {{/if}} --}} 
        {{>popup}}
</div>