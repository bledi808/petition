<div class="edit-form" style="margin:10%">
    <form method="POST">    
        <h4 style="margin-bottom:1%">Edit your profile</h4>
            <div class="form-layout">   
            <div class="input-fields">
                {{#rows}}
                <span>Name</span></br>
                    <input type="text" id="firstname" name="firstname" placeholder="type name..." value="{{first}}" style="margin:1% 0">
                <span></br>Surname</span></br>
                    <input type="text" id="surname" name="surname" placeholder="type surame..." value="{{last}}" style="margin:1% 0">
                <span></br>Email</span></br>
                    <input type="text" id="surname" name="email" placeholder="type email..." value="{{email}}" style="margin:1% 0">
                <span></br>Password</span></br>
                    <input type="text" id="surname" name="password" placeholder="type password..." style="margin:1% 0">
                <span></br>Age</span></br>
                    <input type="text" id="age" name="age" placeholder="type age..." value="{{age}}" style="margin:1% 0">
                <span></br>City</span></br>
                    <input type="text" id="city" name="city" placeholder="type city..." value="{{city}}" style="margin:1% 0">
                <span></br>Homepage</span></br>
                    <input type="text" id="url" name="url" placeholder="type homepage..." value="{{url}}" style="margin:1% 0">
                {{>csrf}}
                <div><button name="submit" id="submit">Update</button></div>
                {{/rows}}
                
    </form>
        {{#if empty}}
            <p style="color: tomato; margin-top:1%">Name, Surname and Email fields must be populated! </p>  
        {{/if}}
</div>